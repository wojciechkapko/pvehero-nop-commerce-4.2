@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="block block-recently-viewed-products">
        <div class="title">
            <svg class="icon font-size-base white"><use href="#chevron-down"></use></svg>
            <strong>@T("Bestsellers")</strong>
        </div>
        <div class="listbox">
            <ul class="list">
                @foreach (var item in Model)
                {
                    var product = item;
                <li class="d-flex">
                    <a href="@Url.RouteUrl("Product", new { SeName = product.SeName })" class="link" title="@product.DefaultPictureModel.Title"></a>
                    @if (!string.IsNullOrEmpty(product.DefaultPictureModel.ImageUrl))
                    {
                        <a class="product-picture" href="@Url.RouteUrl("Product", new { SeName = product.SeName })">
                            <div class="url d-none">@product.DefaultPictureModel.ImageUrl</div>
                            <img alt="@product.DefaultPictureModel.AlternateText" src="" title="@product.DefaultPictureModel.Title" />
                        </a>
                    }
                <div class="info d-flex flex-column justify-content-center">
                    <p class="product-name font-bold">@product.Name</p>
                    @if (!string.IsNullOrEmpty(product.ProductPrice.Price))
                    {
                        <p class="price font-size-xs">From: @product.ProductPrice.Price</p>
                    }
                    else
                    {
                        <p class="price font-size-xs">Click for details</p>
                    }
                </div>
                </li>
                }
            </ul>
        </div>
    </div>
}