@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="block block-recently-viewed-products">
        <div class="title">
            <svg class="icon size-1x white"><use href="#chevron-down"></use></svg>
            <strong>@T("Bestsellers")</strong>
        </div>
        <div class="listbox">
            <ul class="list">
                @foreach (var item in Model)
                {
                    var product = item;
                <li>
                    <a href="@Url.RouteUrl("Product", new { SeName = product.SeName })" class="link" title="@product.DefaultPictureModel.Title"></a>
                    @if (!string.IsNullOrEmpty(product.DefaultPictureModel.ImageUrl))
                    {
                        <a class="product-picture" href="@Url.RouteUrl("Product", new { SeName = product.SeName })">
                            <img alt="@product.DefaultPictureModel.AlternateText" src="@product.DefaultPictureModel.ImageUrl" title="@product.DefaultPictureModel.Title" />
                        </a>
                    }
                <div class="info">
                    <p class="product-name">@product.Name</p>
                    <p class="price actual-price">From: @product.ProductPrice.Price</p>
                </div>
                </li>
                }
            </ul>
        </div>
    </div>
}