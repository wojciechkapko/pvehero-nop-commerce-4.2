@using Nop.Core.Domain.Common
@using Nop.Core.Domain.Seo
@inject SeoSettings seoSettings

@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts("How it works");
    //page class
    Html.AppendPageCssClassParts("html-howitworks-page");
    Html.AppendCssFileParts($"~/css/howitworks.min.css");
    Html.AddMetaDescriptionParts("Learn how our boosting process works.");

    if (seoSettings.CanonicalUrlsEnabled)
    {
        var howItWorksUrl = Url.RouteUrl("HowItWorks", null, this.Url.ActionContext.HttpContext.Request.Scheme);
        Html.AddCanonicalUrlParts(howItWorksUrl, seoSettings.QueryStringInCanonicalUrlsEnabled);
    }
}
<div class="page-title mb-0">
    <h1 class="text-center">How it works</h1>
</div>

